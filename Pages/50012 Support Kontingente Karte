    OnOpenPage=BEGIN
                 info_show := FALSE;
               END;

    OnAfterGetRecord=BEGIN
                       FOR i := 1 TO 6 DO
                         BEGIN
                           Zeile[i] := '';
                         END;

                       i := 1;
                       "TOPAS Bemerkungen".RESET;
                       "TOPAS Bemerkungen".SETRANGE("TOPAS Bemerkungen"."Nr.","Nr.");
                       "TOPAS Bemerkungen".SETRANGE("TOPAS Bemerkungen".Art,"TOPAS Bemerkungen".Art :: Kontingente);
                       IF "TOPAS Bemerkungen".FINDFIRST THEN BEGIN
                         comment := TRUE;
                         REPEAT
                           Zeile[i] := COPYSTR("TOPAS Bemerkungen".Bemerkung,1,80);
                           i := i+1;
                         UNTIL (i=5) OR ("TOPAS Bemerkungen".NEXT=0);
                         IF i = 6 THEN
                           Zeile[i] := '... fr Fortsetzung klicken Sie bitte oben in die Bemerkung.';
                       END ELSE
                         comment := FALSE;

                       IF "Offenes Kontingent" = 0 THEN
                         style_offenes_kontingent := 'Standard'
                       ELSE
                         IF "Offenes Kontingent" > 0 THEN
                           style_offenes_kontingent := 'Favorable'
                         ELSE
                           style_offenes_kontingent := 'Unfavorable';

                       Beteiligte.RESET;
                       Beteiligte.SETFILTER("Kampagnennr.",'%1',"Nr.");
                       IF Beteiligte.FINDFIRST THEN
                         AnzBeteiligte := Beteiligte.COUNT
                       ELSE
                         AnzBeteiligte := 0;
                     END;

    OnAfterGetCurrRecord=VAR
                           i@1140000 : Integer;
                         BEGIN
                         END;

