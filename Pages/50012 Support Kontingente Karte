                                 Proj@1140000 : Record 5071;
                               BEGIN
                                 Support := Rec;
                                 Support.SETRECFILTER;
                                 REPORT.RUN(50063,TRUE,FALSE,Support);
                               END;
                                }
      { 1000000007;2 ;Action    ;
                      Name=Sofort_drucken;
                      CaptionML=DEU=Sofort drucken;
                      ToolTipML=DEU=Kontingent-šbersicht drucken;
