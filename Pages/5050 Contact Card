                           ContactMailingGroup.SETFILTER("Contact No.",'%1',"No.");
                           ContactMailingGroup.SETFILTER("Mailing Group Code",'%1|%2','UNSUB','NO EMAIL');
                           IF ContactMailingGroup.FINDFIRST THEN BEGIN
                             Unsub := TRUE;
                             UnsubWarnung := 'Achtung: UNSUBSCRIBE oder NO EMAIL im Verteiler gefunden!!!';
                           END ELSE BEGIN
                             Unsub := FALSE;
                             UnsubWarnung := '';
                           END;

                           //01.06.17 ST - Deaktiviert da eher st”rend und nicht immer die Info verfgbar ist
                           {
                           IF ("Unternehmen verlassen" = FALSE) AND (Gesperrt = FALSE)
                           AND (Type = Type::Person)AND ("Organizational Level Code"='') AND (Rec."No." <> xRec."No.") THEN
                             MESSAGE('Die Abteilung wurde nicht im Feld Positionscode ausgew„hlt.');
                           }

                           //29.08.08 ST
                           IF (Type = Type::Company) AND (Rec."No." <> xRec."No.") AND ("No." <> '') THEN BEGIN
                             IF ("Betreuer Innendienst" = '') AND ("Salesperson Code" <> '')  THEN
                                MESSAGE('Der Betreuer Innendienst wurde noch nicht ausgew„hlt.');
                             IF ("Betreuer Innendienst" <> '') AND ("Salesperson Code" = '')  THEN
                                MESSAGE('Der Verk„ufercode wurde noch nicht ausgew„hlt.');
                             IF ("Betreuer Innendienst" = '') AND ("Salesperson Code" = '')  THEN
                                MESSAGE('Der Verk„ufercode und Betreuer Innendienst wurden noch nicht ausgew„hlt.');
                           END;

                           IF ("No." <> '') AND ("Company No." <> '') THEN BEGIN
                           ContactIndustryGroup.SETRANGE("Contact No.","Company No.");
                           ContactIndustryGroup.SETRANGE("Industry Group Code",'HŽNDLER');
                           IF ContactIndustryGroup.FINDFIRST THEN
                             Disti := TRUE
                           ELSE
                             Disti := FALSE;
                           END;

                           //29.08.08 ST - Anzeige "Angelegt von" aus den Žnderungsprotokollposten
                           ChangeLog.SETRANGE(ChangeLog."Table No.",5050);
                           ChangeLog.SETRANGE(ChangeLog."Type of Change",ChangeLog."Type of Change"::Insertion);
                           ChangeLog.SETRANGE(ChangeLog."Primary Key Field 1 Value","No.");
                           IF ChangeLog.FINDFIRST THEN
                             CreatedBy := ChangeLog."User ID"
                           ELSE
                             CreatedBy := '';

                           //04.07.17 ST ST - Hebt das Bemerkungs Feld rot hervor, wenn eine Bemerkung zum Kontakt vorhanden ist
                           IF Comment THEN
                             comment_style := 'Unfavorable'
                           ELSE
                             comment_style := 'Standard';

                           //TOPAS Ende
                         END;

