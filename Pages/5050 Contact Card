    OnNewRecord=VAR
                  Contact@1001 : Record 5050;
                BEGIN
                  IF GETFILTER("Company No.") <> '' THEN BEGIN
                    "Company No." := GETRANGEMAX("Company No.");
                    Type := Type::Person;
                    Contact.GET("Company No.");
                    InheritCompanyToPersonData(Contact,TRUE)
                  END;
                END;

    OnDeleteRecord=BEGIN
                     //TOPAS 29.01.10 ST - Verbindungen zu TOPAS Tabellen werden geprft, ehemals in Table 5050 22.04.09 ST
                     CASE Type OF
                       Type::Company: BEGIN
                         Cont.RESET;
                         Cont.SETRANGE(Type,Cont.Type::Person);
                         Cont.SETRANGE("Company No.","No.");

                         Belege.RESET;
                         Belege.SETRANGE(Belege.Endkunde,"No.");

                         Endkunden.RESET;
                         Endkunden.SETRANGE("Endkundennr.","No.");

                         MemoCont.RESET;
                         MemoCont.SETRANGE("Mandantennr.","No.");

                         Ansprech_Projekt.RESET;
                         Ansprech_Projekt.SETFILTER("Kontaktnr.",'%1',"No.");
                         Ansprech_Projekt.SETFILTER("Memonr.",'%1','');
                         Ansprech_Projekt.SETFILTER("Kampagnennr.",'<%1','SV');

                         Ansprech_Wartung.RESET;
                         Ansprech_Wartung.SETFILTER("Kontaktnr.",'%1',"No.");
                         Ansprech_Wartung.SETFILTER("Memonr.",'%1','');
                         Ansprech_Wartung.SETFILTER("Kampagnennr.",'>=%1','SV');

                         RMA.RESET;
                         RMA.SETFILTER(Art,'%1|%2',RMA.Art::Kunde,RMA.Art :: Hersteller);
                         RMA.SETFILTER("Kontakt Mandantennr.",'%1',"No.");

                         Dokuversand.RESET;
                         Dokuversand.SETRANGE("Mandantennr.","No.");

                         IF (Belege.FINDFIRST) OR (Endkunden.FINDFIRST) OR (MemoCont.FINDFIRST) OR (Ansprech_Projekt.FINDFIRST)
                         OR (Ansprech_Wartung.FINDFIRST) OR (Cont.FINDFIRST) OR (RMA.FINDFIRST) OR (Dokuversand.FINDFIRST) THEN
                           IF NOT CONFIRM (Text50000,FALSE,Cont.COUNT,Belege.COUNT,Endkunden.COUNT,MemoCont.COUNT,
                                                           Ansprech_Projekt.COUNT+Ansprech_Wartung.COUNT,RMA.COUNT,Dokuversand.COUNT) THEN
                             ERROR(Text50001);
                       END;
                     END;
                     //TOPAS Ende
                   END;

    OnAfterGetCurrRecord=VAR
                           CRMCouplingManagement@1001 : Codeunit 5331;
                         BEGIN
                           xRec := Rec;
                           EnableFields;

                           IF Type = Type::Person THEN
                             IntegrationFindCustomerNo
                           ELSE
                             IntegrationCustomerNo := '';

                           IF CRMIntegrationEnabled THEN
