  {
    VAR
      Campaign@1140000 : Record 5071;
      Memo@1140011 : Record 50003;
      Ansprech@1140003 : Record 50005;
      ProjArtikel@1140005 : Record 50006;
      Projektwert@1140002 : Decimal;
