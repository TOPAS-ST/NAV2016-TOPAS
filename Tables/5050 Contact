    { 60001;  ;Betreuer Innendienst;Code10        ;TableRelation=Salesperson/Purchaser;
                                                   OnValidate=BEGIN
                                                                //TOPAS 10.09.08 ST - Update des Betreuers in den dazugeh”rigen Projekten mit Hauptbeteiligung, bei Bestckern kommt nur ein Hinweis
                                                                counter := 0;
                                                                IF ("No." <> '') AND ("Betreuer Innendienst" <> xRec."Betreuer Innendienst")
                                                                AND ("Betreuer Innendienst" <> '' ) AND (Type=Type::Company) THEN BEGIN
                                                                  IF "Betreuer Innendienst" <> 'MULTI' THEN BEGIN
                                                                    Ansprechpartner.RESET;
                                                                    Ansprechpartner.SETRANGE(Typ,Ansprechpartner.Typ::Company);
                                                                    Ansprechpartner.SETRANGE(Fhrungsrolle,TRUE);
                                                                    Ansprechpartner.SETRANGE("Kontaktnr.","No.");
                                                                    IF Ansprechpartner.FINDFIRST THEN BEGIN
                                                                      REPEAT
                                                                        Projekte.RESET;
                                                                        Projekte.SETRANGE("No.",Ansprechpartner."Kampagnennr.");
                                                                        IF Projekte.FINDFIRST THEN BEGIN
                                                                          Projekte."Betreuer Innendienst" := "Betreuer Innendienst";
                                                                          Projekte.MODIFY;
                                                                          counter += 1;
                                                                        END;
                                                                      UNTIL Ansprechpartner.NEXT = 0;
                                                                      IF counter > 0 THEN MESSAGE(Text50005,counter);
                                                                    END;
                                                                  END ELSE BEGIN
                                                                    Ansprechpartner.RESET;
                                                                    Ansprechpartner.SETRANGE(Typ,Ansprechpartner.Typ::Company);
                                                                    Ansprechpartner.SETRANGE(Fhrungsrolle,TRUE);
                                                                    Ansprechpartner.SETRANGE("Kontaktnr.","No.");
                                                                    IF Ansprechpartner.FINDFIRST THEN BEGIN
                                                                      Branchen.RESET;
                                                                      Branchen.SETRANGE(Branchen."Contact No.","No.");
                                                                      Branchen.SETRANGE(Branchen."Industry Group Code",'BESTšCKER');
                                                                      IF Branchen.FINDFIRST THEN
                                                                        MESSAGE(Text50003,UPPERCASE(FIELDCAPTION("Betreuer Innendienst")))
                                                                      ELSE
                                                                        MESSAGE(Text50004,UPPERCASE(FIELDCAPTION("Betreuer Innendienst")));
                                                                    END;
                                                                  END;
                                                                END;
                                                                //TOPAS Ende
                                                              END;

                                                   CaptionML=DEU=Betreuer Innendienst;
                                                   Description=TOPAS }
    { 60002;  ;Teams               ;Code10        ;TableRelation=Team;
                                                   OnValidate=BEGIN
                                                                //TOPAS 10.09.08 ST - Update des Teamcodes in den dazugeh”rigen Projekten mit Hauptbeteiligung, bei Bestckern kommt nur ein Hinweis
                                                                counter := 0;
                                                                IF ("No." <> '') AND (Teams <> xRec.Teams) AND (Type = Type::Company) THEN BEGIN
                                                                  Ansprechpartner.RESET;
                                                                  Ansprechpartner.SETRANGE(Typ,Ansprechpartner.Typ::Company);
                                                                  Ansprechpartner.SETRANGE(Fhrungsrolle,TRUE);
                                                                  Ansprechpartner.SETRANGE("Kontaktnr.","No.");
                                                                  IF Ansprechpartner.FINDFIRST THEN BEGIN
                                                                    REPEAT
                                                                      Projekte.RESET;
                                                                      Projekte.SETRANGE("No.",Ansprechpartner."Kampagnennr.");
                                                                      IF Projekte.FINDFIRST THEN BEGIN
                                                                        Projekte.Teams := Teams;
                                                                        Projekte.MODIFY;
                                                                        counter += 1;
                                                                      END;
                                                                    UNTIL Ansprechpartner.NEXT = 0;
                                                                    IF counter > 0 THEN MESSAGE(Text50005,counter);
                                                                  END;
                                                                END;
                                                                //TOPAS Ende
                                                              END;

                                                   CaptionML=DEU=Teams;
                                                   Description=TOPAS }
  }
