    { 50038;  ;Unternehmen verlassen;Boolean      ;OnValidate=BEGIN
                                                                //TOPAS 24.11.16 ub, 28.06.17 ST - L”schen der Kontakt Verbindungen in Projekten, Memos (aber mit Info in Zeilen), RMA's

                                                                IF Type = Type::Company THEN ERROR(Text50006,FIELDCAPTION("Unternehmen verlassen"));

                                                                IF  "Unternehmen verlassen" = TRUE THEN BEGIN

                                                                  "UN verlassen am" := WORKDATE;

                                                                  counter_del[1] := 0;
                                                                  counter_del[2] := 0;
                                                                  counter_del[3] := 0;

                                                                  Ansprechpartner.RESET;
                                                                  Ansprechpartner.SETFILTER("Kontaktnr.",'%1',"No.");
                                                                  Ansprechpartner.SETFILTER("Memonr.",'<>%1','');
                                                                  IF Ansprechpartner.FIND('-') THEN BEGIN
                                                                    REPEAT
                                                                      IF memonr <> Ansprechpartner."Memonr." THEN
                                                                        k := 1;
                                                                        IF "Salutation Code" = 'HERR' THEN
                                                                          kontaktperson := 'Herr ' + Surname + ' (' + "Company Name" + ')'
                                                                        ELSE
                                                                          IF "Salutation Code" = 'FRAU' THEN
                                                                            kontaktperson := 'Frau ' + Surname + ' (' + "Company Name" + ')'
                                                                          ELSE
                                                                            kontaktperson := 'Unbekannt ' + Surname + ' (' + "Company Name" + ')';
                                                                       counter_del[1] += 1;
                                                                       Memokopf.RESET;
                                                                       Memokopf.SETRANGE("Memonr.",Ansprechpartner."Memonr.");
                                                                       IF Memokopf.FINDFIRST THEN BEGIN
                                                                         Memozeile.RESET;
                                                                         Memozeile.SETRANGE("Memonr.",Ansprechpartner."Memonr.");
                                                                         Memozeile.SETRANGE("Zeilennr.",1);
                                                                         IF NOT Memozeile.FINDFIRST THEN BEGIN
                                                                           Memozeile_neu.INIT;
                                                                           Memozeile_neu."Memonr." := Ansprechpartner."Memonr.";
                                                                           Memozeile_neu."Zeilennr." := k;
                                                                           Memozeile_neu.Datum := 01012100D;
                                                                           Memozeile_neu.Bemerkung := 'Ehemalige Beteiligte - Grund Unternehmen verlassen:';
                                                                           Memozeile_neu."Kampagnennr." := Memokopf."Kampagnennr.";
                                                                           Memozeile_neu.INSERT;
                                                                         END;

                                                                         Memozeile.RESET;
                                                                         Memozeile.SETRANGE("Memonr.",Ansprechpartner."Memonr.");
                                                                         Memozeile.SETRANGE(Bemerkung,kontaktperson);
                                                                         IF NOT Memozeile.FINDFIRST THEN BEGIN
                                                                           REPEAT
                                                                             k += 1;
                                                                             Memozeile.RESET;
                                                                             Memozeile.SETRANGE("Memonr.",Ansprechpartner."Memonr.");
                                                                             Memozeile.SETRANGE("Zeilennr.",k);
                                                                           UNTIL NOT Memozeile.FINDFIRST;
                                                                           Memozeile_neu.INIT;
                                                                           Memozeile_neu."Memonr." := Ansprechpartner."Memonr.";
                                                                           Memozeile_neu."Zeilennr." := k;
                                                                           Memozeile_neu.Bemerkung := kontaktperson;
                                                                           Memozeile_neu.INSERT;
                                                                         END;
                                                                       END ELSE BEGIN
                                                                         //Memokopf nicht gefunden
                                                                       END;

                                                                      Ansprechpartner.DELETE;

                                                                      memonr := Ansprechpartner."Memonr.";

                                                                    UNTIL Ansprechpartner.NEXT = 0;
                                                                  END;

                                                                  Ansprechpartner.RESET;
                                                                  Ansprechpartner.SETFILTER("Kontaktnr.",'%1',"No.");
                                                                  Ansprechpartner.SETFILTER("Kampagnennr.",'<>%1','');
                                                                  IF Ansprechpartner.FINDFIRST THEN BEGIN
                                                                    counter_del[2] += Ansprechpartner.COUNT;
                                                                    Ansprechpartner.DELETEALL;
                                                                  END;

                                                                  Ansprechpartner.RESET;
                                                                  Ansprechpartner.SETFILTER("Kontaktnr.",'%1',"No.");
                                                                  Ansprechpartner.SETFILTER("Kampagnennr.",'<>%1','');
                                                                  IF Ansprechpartner.FINDFIRST THEN BEGIN
                                                                    counter_del[2] += Ansprechpartner.COUNT;
                                                                    Ansprechpartner.DELETEALL;
                                                                  END;

                                                                  Ansprech_RMA.RESET;
                                                                  Ansprech_RMA.SETFILTER("Nr.",'%1',"No.");
                                                                  IF Ansprech_RMA.FINDFIRST THEN BEGIN
                                                                    counter_del[3] := Ansprech_RMA.COUNT;
                                                                    Ansprech_RMA.DELETEALL;
                                                                  END;

                                                                END ELSE
                                                                  "UN verlassen am" := 0D;

                                                                //MESSAGE('Memos ge„ndert: %1, Projekte ge„ndert: %2, RMA ge„ndert: %3', counter_del[1],counter_del[2],counter_del[3]);
                                                              END;

                                                   Description=TOPAS 23.02.09 ST }
    { 50039;  ;UN verlassen am     ;Date          ;Description=TOPAS 23.02.09 ST }
