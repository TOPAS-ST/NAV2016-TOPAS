    { 15  ;   ;Territory Code      ;Code10        ;TableRelation=Territory;
                                                   OnValidate=BEGIN
                                                                //TOPAS 22.08.13 ST Beginn - Update des Gebietscodes in den dazugeh”rigen Projekten mit Hauptbeteiligung
                                                                counter := 0;
                                                                IF ("No." <> '') AND ("Territory Code" <> xRec."Territory Code") AND ("Territory Code" <> '' ) AND (Type=Type::Company) THEN BEGIN
                                                                  Ansprechpartner.RESET;
                                                                  Ansprechpartner.SETRANGE(Typ,Ansprechpartner.Typ::Company);
                                                                  Ansprechpartner.SETRANGE(Fhrungsrolle,TRUE);
                                                                  Ansprechpartner.SETRANGE("Kontaktnr.","No.");
                                                                  IF Ansprechpartner.FINDFIRST THEN BEGIN
                                                                    REPEAT
                                                                      Projekte.RESET;
                                                                      Projekte.SETRANGE("No.",Ansprechpartner."Kampagnennr.");
                                                                      IF Projekte.FINDFIRST THEN BEGIN
                                                                        Projekte."Territory Code" := "Territory Code";
                                                                        Projekte.MODIFY;
                                                                        counter += 1;
                                                                      END;
                                                                    UNTIL Ansprechpartner.NEXT = 0;
                                                                    IF counter > 0 THEN MESSAGE(Text50005,counter);
                                                                  END;
                                                                END;
                                                                //TOPAS Ende
                                                              END;

                                                   CaptionML=[DEU=Gebietscode;
                                                              ENU=Territory Code] }
    { 22  ;   ;Currency Code       ;Code10        ;TableRelation=Currency;
                                                   CaptionML=[DEU=W„hrungscode;
                                                              ENU=Currency Code] }
    { 24  ;   ;Language Code       ;Code10        ;TableRelation=Language;
                                                   CaptionML=[DEU=Sprachcode;
                                                              ENU=Language Code] }
    { 29  ;   ;Salesperson Code    ;Code10        ;TableRelation=Salesperson/Purchaser;
                                                   OnValidate=BEGIN
                                                                //TOPAS 10.09.08 ST Beginn - Update des Verk„ufers in den dazugeh”rigen Projekten mit Hauptbeteiligung, bei Bestckern kommt nur ein Hinweis
                                                                counter := 0;
                                                                IF ("No." <> '') AND ("Salesperson Code" <> xRec."Salesperson Code") AND ("Salesperson Code" <> '') AND (Type=Type::Company) THEN BEGIN
                                                                  IF "Salesperson Code" <> 'MULTI' THEN BEGIN
                                                                    Ansprechpartner.RESET;
                                                                    Ansprechpartner.SETRANGE(Typ,Ansprechpartner.Typ::Company);
                                                                    Ansprechpartner.SETRANGE(Fhrungsrolle,TRUE);
                                                                    Ansprechpartner.SETRANGE("Kontaktnr.","No.");
                                                                    IF Ansprechpartner.FINDFIRST THEN BEGIN
                                                                      REPEAT
                                                                        Projekte.RESET;
                                                                        Projekte.SETRANGE(Projekte."No.",Ansprechpartner."Kampagnennr.");
                                                                        IF Projekte.FINDFIRST THEN BEGIN
                                                                          Projekte."Salesperson Code" := "Salesperson Code";
                                                                          Projekte.MODIFY;
                                                                          counter += 1;
                                                                        END;
                                                                      UNTIL Ansprechpartner.NEXT = 0;
                                                                      IF counter > 0 THEN MESSAGE(Text50005,counter);
                                                                    END;
                                                                  END ELSE BEGIN
                                                                    Ansprechpartner.RESET;
                                                                    Ansprechpartner.SETRANGE(Typ,Ansprechpartner.Typ::Company);
                                                                    Ansprechpartner.SETRANGE(Fhrungsrolle,TRUE);
                                                                    Ansprechpartner.SETRANGE("Kontaktnr.","No.");
                                                                    IF Ansprechpartner.FINDFIRST THEN BEGIN
                                                                      Branchen.RESET;
                                                                      Branchen.SETRANGE("Contact No.","No.");
                                                                      Branchen.SETRANGE("Industry Group Code",'BESTšCKER');
                                                                      IF Branchen.FINDFIRST THEN
                                                                        MESSAGE(Text50003,UPPERCASE(FIELDCAPTION("Salesperson Code")))
                                                                      ELSE
                                                                        MESSAGE(Text50004,UPPERCASE(FIELDCAPTION("Salesperson Code")));
                                                                    END;
                                                                  END;
                                                                END;
                                                                //TOPAS Ende
                                                              END;

                                                   CaptionML=[DEU=Verk„ufercode;
                                                              ENU=Salesperson Code] }
    { 35  ;   ;Country/Region Code ;Code10        ;TableRelation=Country/Region;
                                                   CaptionML=[DEU=L„nder-/Regionscode;
                                                              ENU=Country/Region Code] }
    { 38  ;   ;Comment             ;Boolean       ;FieldClass=FlowField;
                                                   CalcFormula=Exist("Rlshp. Mgt. Comment Line" WHERE (Table Name=CONST(Contact),
                                                                                                       No.=FIELD(No.),
                                                                                                       Sub No.=CONST(0)));
